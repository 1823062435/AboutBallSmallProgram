<!--pages/chat/chat.wxml-->
<!--index.wxml-->
<view class="msg-box">
<!--留言-->
   <view class="send-box">
      <input bindinput="changeInputValue" class="input" type="text" value="{{inputVal}}" placeholder="请输入留言……" placeholder-class="place-input"/>
      <button size="mini" type="primary" bindtap="addMsg">发送</button>
   </view>
   <!--留言列表-->
   <text class="msg-info" wx:if="{{msgData.length==0}}">暂无留言</text>
   <view class="list-view">
      <view class="item" wx:for="{{msgData.data}}" wx:key="{{index}}">
        <view class="item-all">
        <view class="text1">{{item.content}}</view>
        <view class="item-time">{{item.time}}</view>
        </view>
        <image src="{{item.avaurl}}" class="user-img"></image>
        <!--button size="mini" plain class="close-btn" type="default">删除</button-->
        <!-- <icon type="cancel" bindtap="DelMsg" data-index="{{index}}" class="close-btn" /> -->
      </view>
   </view>
</view>
