/* pages/join/join.wxss */
.box{
  height: 190rpx;
  display:flex;
  flex-direction: row;
  align-items:center;/*指定垂直居中*/
  padding-left:30rpx;
  margin-bottom: 10rpx;
  border-top: 1rpx solid rgba(185, 176, 176, 0.788);
  border-bottom: 1rpx solid rgba(185, 176, 176, 0.788);
}

.head{
  border-radius: 50%;
  width: 125rpx;
  height: 125rpx;
}
.content{
  margin-left:50rpx;
  display: flex;
  flex-direction: column;
}
.contentKind{
  width: 500rpx;
  color: #525252;
  font-size: 29rpx;
  letter-spacing: 3rpx;
  margin-top:10rpx;
  white-space:nowrap;
  overflow:hidden; 
  text-overflow:ellipsis; 
}
.contentKindA{
  color: #b7b92ded;
  font-weight: 450;
}
.contentKindB{
  font-weight: 630;
}
.otherText{
  text-align: center;
  font-size: 38rpx;
  color: #525252;
  font-weight: 800;
  margin-top: 35vh;
  display: flex;
  flex-direction: column;
}
.otherButtom{
   margin-top: 30rpx;
}